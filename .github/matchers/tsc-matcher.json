{
  "problemMatcher": [
    {
      "owner": "ng-tsc",
      "pattern": [
        {
          // Adapted from https://github.com/microsoft/vscode/blob/9b31cacba04749a4bacd0e9198841a79737f2424/extensions/typescript-language-features/package.json#L902-L913
          "regexp": "^([^\\s].*)[\\(:](\\d+)[,:](\\d+)(?:\\):\\s+|\\s+-\\s+)(error|warning|info)\\s+TS(\\d+)\\s*:\\s*(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "code": 5,
          "message": 6
        }
      ]
    }
  ]
}
