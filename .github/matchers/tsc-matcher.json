{
  "problemMatcher": [
    {
      "owner": "ng-tsc",
      "pattern": [
        {
          // Adapted from https://github.com/Genuitec/vscode-angular-cli-task-provider/blob/ea3346129ce1548494e74c0f3df835e0e3369ebe/package.json#L59-L68
          "regexp": "^ERROR in ([^\\s].*)[\\(:](\\d+)[,:](\\d+)(?:\\):\\s+|\\s+-\\s+)(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "code": 5,
          "message": 6
        }
      ]
    }
  ]
}
