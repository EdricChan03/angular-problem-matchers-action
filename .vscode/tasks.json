{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run test with problem matchers",
      "type": "shell",
      "command": ["node", "test.js"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      // From .github/matchers/*.json
      "problemMatcher": [
        {
          "owner": "ng-lint",
          "pattern": [
            {
              // Adapted from https://github.com/microsoft/vscode-typescript-tslint-plugin/blob/a2e8875857bde8bc9ba6f38d3a9b25088bc6930a/package.json#L64-L72
              "regexp": "^(WARNING|ERROR):(\\s+\\(\\S*\\))?\\s+(\\S.*)(:|\\[)(\\d+)(:|, )(\\d+)(\\]:\\s+|\\s+-\\s+)(.*)$",
              "severity": 1,
              "file": 3,
              "line": 5,
              "column": 7,
              "message": 9
            }
          ],
          "fileLocation": "absolute",
          "severity": "warning"
        }
      ]
    }
  ]
}
